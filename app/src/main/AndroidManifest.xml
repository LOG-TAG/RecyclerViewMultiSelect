<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smurph.recyclerviewmultiselect">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MultiSelector" >
        <activity
            android:name=".ui.MultiWithCABActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SingleWithCABActivity"/>
        <activity android:name=".ui.MultiWithoutCABActivity"/>
        <activity android:name=".ui.SingleWithoutCABActivity"/>
        <activity android:name=".ui.ViewPagerActivity"
            android:theme="@style/Theme.MultiSelector.FragmentRefresh"/>

    </application>

</manifest>
