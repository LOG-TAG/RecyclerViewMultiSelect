<resources>

    <style name="Base.Theme.MultiSelector" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarIconColor">@color/theme_action_text_icon</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Theme.ActionMode</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>
        <!--<item name="selectedItemColor">#f00</item>-->
    </style>

    <style name="Theme.MultiSelector" parent="Base.Theme.MultiSelector"/>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#000</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?actionBarIconColor</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Theme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?colorAccent</item>
    </style>

</resources>
